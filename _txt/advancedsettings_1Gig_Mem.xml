<!--http://kodi.wiki/view/Advancedsettings.xml-->
<!--1 gig machine Advancedsettings.xml-->
<advancedsettings>
<playlisttimeout>10</playlisttimeout>
<packagefoldersize>200</packagefoldersize>
<network>
    <cachemembuffersize>52428800</cachemembuffersize>
    <buffermode>1</buffermode>
    <curlclienttimeout>300</curlclienttimeout>
    <curllowspeedtime>300</curllowspeedtime>
</network>
<pvr>
    <minvideocachelevel>65</minvideocachelevel>
    <minaudiocachelevel>65</minaudiocachelevel>
    <cacheindvdplayer>true</cacheindvdplayer>
</pvr>
<samba>
   <clienttimeout>10</clienttimeout>
   <statfiles>false</statfiles>
</samba>
<gui>
   <nofliptimeout>0</nofliptimeout>
   <algorithmdirtyregions>3</algorithmdirtyregions> 
</gui>
<filelists>
   <allowfiledeletion>true</allowfiledeletion>
</filelists>
<videoscanner>
   <ignoreerrors>true</ignoreerrors>
</videoscanner>
<input>
   <enablemouse>true</enablemouse>
</input>
</advancedsettings>